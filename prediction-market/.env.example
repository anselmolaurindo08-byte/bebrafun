# ===========================================
# Prediction Market Backend Configuration
# ===========================================

# Database Configuration
# For Railway: use DATABASE_URL or individual vars
# Railway auto-provides: DATABASE_URL=postgresql://user:pass@host:port/dbname
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=prediction_market
# DATABASE_URL=postgresql://postgres:password@localhost:5432/prediction_market

# X.com (Twitter) OAuth Configuration
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
TWITTER_CALLBACK_URL=http://localhost:8080/auth/callback

# Server Configuration
SERVER_PORT=8080
# Generate with: openssl rand -hex 32
JWT_SECRET=your_secret_key_change_this_in_production

# Application Settings
INITIAL_VIRTUAL_BALANCE=1000.00
INVITE_CODES_PER_USER=5

# Solana Blockchain Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
# SOLANA_PRIVATE_KEY=your_base58_private_key

# Polymarket API (optional, for market data sync)
# POLYMARKET_API_KEY=
# POLYMARKET_SECRET=
# POLYMARKET_PASSPHRASE=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
